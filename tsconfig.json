{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        // "rootDir": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "isolatedModules": true
    },
    // "include": ["./src/**/*"],
    "exclude": [
        "node_modules",
        "build"
    ]
}
